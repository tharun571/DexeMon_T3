<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:padding="20dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dexé"
                        android:textSize="70sp"
                        android:textColor="#FFDE00"
                        android:textColorHint="#3B4CCA"
                        android:fontFamily="@font/pokesolid"/>
                    <TextView
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="#B3A125"
                        android:textSize="70sp"
                        android:fontFamily="@font/pokehollow"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="your anytime pokédex"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hackney"
                    android:textColor="#3b4cca"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>